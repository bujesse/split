package partials

templ Index() {
	<div class="mt-6 w-full flex justify-center items-center flex-col">
		<button
			onclick="baseModal.showModal()"
			hx-get="/partials/expenses/new"
			hx-trigger="click"
			hx-target="#modal-container"
			class="btn btn-primary"
		>
			Add Expense
		</button>
	</div>
	<div id="expenses-table" hx-get="/api/expenses" hx-trigger="load, reloadExpenses from:body"></div>
}
